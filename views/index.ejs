<%- include('partials/header') %>

<%- include('partials/stats') %>

<div style="background: white; padding: 25px; margin-bottom: 25px; border-radius: 12px; box-shadow: 0 4px 6px rgba(0,0,0,0.05);">
    <h3>Додати нову звичку</h3>
    <form action="/habits" method="POST" style="display: flex; gap: 10px; flex-wrap: wrap;">
        <input type="text" name="name" placeholder="Назва (напр. Спорт)" required style="padding: 10px; border: 1px solid #ddd; border-radius: 5px; flex: 2;">
        
        <select name="category" style="padding: 10px; border: 1px solid #ddd; border-radius: 5px; flex: 1;">
            <option value="Здоров'я">Здоров'я</option>
            <option value="Навчання">Навчання</option>
            <option value="Робота">Робота</option>
            <option value="Саморозвиток">Саморозвиток</option>
            <option value="Інше">Інше</option>
        </select>
        
        <select name="difficulty" style="padding: 10px; border: 1px solid #ddd; border-radius: 5px; flex: 1;">
            <option value="1">Легко (1)</option>
            <option value="3">Середньо (3)</option>
            <option value="5">Важко (5)</option>
        </select>
        
        <button type="submit" style="padding: 10px 20px; background: #4a90e2; color: white; border: none; border-radius: 5px; cursor: pointer;">Створити</button>
    </form>
</div>

<div class="habits-list">
    <% habits.forEach(function(habit) { %>
        <%- include('partials/habit-card', { habit: habit }) %>
    <% }); %>
</div>

<%- include('partials/footer') %>